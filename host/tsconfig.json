{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
	  "target": "es5",
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "forceConsistentCasingInFileNames": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve",
	  "incremental": true,
	  "plugins": [
		{
		  "name": "next"
		}
	  ],
	  "composite": true
	},
	"references": [
		{ "path": "../shared" },
	],
	"include": [
		"next-env.d.ts", 
		"**/*.js", 
		"**/*.jsx", 
		"**/*.ts", 
		"**/*.tsx", 
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
  }
  